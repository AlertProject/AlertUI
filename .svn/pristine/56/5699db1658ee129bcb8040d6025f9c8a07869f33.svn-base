.selected-node {
	color: yellow;
	background-color: rgba(30, 116, 255, .6);
}

.neighbour-node {
	color: white;
	background-color: rgba(62, 189, 255, .6);
}

#wrapper {
	max-width: 1300px;
	height: 98%;
	min-height: 655px;
	margin-top: auto;
	margin-bottom: auto;
	margin-left: auto;
	margin-right: auto;
}

html {
	height: 100%;
}

body {
	height: 100%;
	background-color: #FFFFFF;
	font-size: 12px;
	margin: 0px;
}

#graph-div {
	width: 100%;
	height: 80%;
	margin-left: auto;
	margin-right: auto;
	margin-top: auto;
	margin-bottom: auto;
}

#inner-center {
	padding: 0px 0px 0px 0px;
	margin: 0 0 0 0;
}

#outer-center {
	padding: 0 0 0 0;
	width: 50%;
}

#tabs {
	border: 0;
}

#tabs-item {
	width: 90%;
	height: 100%;
	margin-left: auto;
	margin-right: auto;
}

#tabs-item table {
	width: 100%;
	height: 100%;
}

#item-accordion {
	width: 100%;
	height: 100%;
}

.ui-tabs-panel {
	height: 98%;
	overflow: auto;
}

#outer-west {
	width: 50%;
}

#graph-controls-div {
	position: absolute;
	top: 45px;
	left: 10px;
	z-index: 1000;
}

#outer-west ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

#outer-west li {
	border-bottom: solid 1px rgb(179, 179, 179);
	margin-top: 0;
	padding-top: 0;
	margin-bottom: 0;
	padding-bottom: 0;
	border-top: solid 1px rgba(179, 179, 179, 0);
}

#outer-west li:hover {
	background-color: rgb(214, 235, 255);
}

.item_header {
	margin-top: 5px;
	margin-left: 25px;
	margin-right: 20px;
	font-size: 14px;
	color: #008080;
}

.item_date {
	color: rgb(128, 128, 128);
	font-size: 12px;
	text-align: right;
	vertical-align: top;
	padding-left: 20px;
}

.item_content {
	margin-left: 25px;
	color: black;
	font-size: 12px;
	margin-bottom: 5px;
}

.item_similarity {
	color: rgb(128, 0, 128);
	font-size: 13px;
	text-align: right;
	vertical-align: top;
	padding-left: 20px;
	min-width: 80px;
	font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
	font-weight: lighter;
	text-transform: uppercase;
}

.item-wrapper {
	position: relative;
	width: 100%;
}

.item_table {
	width: 100%;
}

.item-wrapper:HOVER {
	cursor: pointer;
}

.item-wrapper .item_subject {
	margin-left: 25px;
	font-size: 12px;
	color: rgb(4, 27, 204);
}

a,a:visited {
	font-weight: bold;
	text-decoration: none;
	color: rgb(4, 27, 204);
	cursor: pointer;
}

a:hover {
	text-decoration: underline;
}

.advanced_fieldset {
	display: block;
	float: left;
	width: 418px !important;
	width: 420px;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 12px;
	margin-top: 10px;
	margin-left: 20px;
	border: 1px solid #CCCCCC;
}

.advanced_table tbody {
	width: 100%;
}

.advanced_table {
	display: block;
	padding: 10px;
	border: 1px solid #CCCCCC;
	width: 95%;
	height: 100%;
	margin-left: auto;
	margin-right: auto;
}

.advanced_table .text,button {
	width: 100px;
}

.advanced_table .between {
	width: 30px;
}

.advanced_table .button_td {
	width: 150px;
	text-align: center;
	vertical-align: top;
}

.advanced_table .name {
	width: 90px;
}

.advanced_table .taller_btn {
	height: 40px;
}

legend {
	padding: 2px 5px;
}

#nav {
	text-align: center;
}

.highlight {
	background-color: yellow;
}

/* Popup window */
#popup_search {
	background-color: white;
	border-radius: 10px 10px 10px 10px;
	box-shadow: 0 0 25px 5px #999;
	color: #111;
	display: none;
	min-width: 450px;
	padding: 25px;
}